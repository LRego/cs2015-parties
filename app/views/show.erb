<div class="party">
	<h1> Party: <%= @party.name %> </h1>
	<p> <%= @party.address %> </p>
	<p> Coordinates: <%= @party.longitude %>ยบ E ; <%= @party.latitude %>ยบ N </p>
	<p> <%= @party.time.strftime("Date: %m/%d/%Y at %I:%M%p") %> </p>
</div>

<form action="/parties/create/<%= @party.id %>/attendee" method="post">
   <input type="text" name="name" placeholder="Insert your name here">
   <input type="email" name="email" placeholder="Insert your email here">
   <button type="submit" >Add new attendee</button>
</form> 

<ul>
  <% @attendees.each do |attendee| %> 
  <li>Name: <%= attendee.name %>, E-Mail: <%= attendee.email %></li>
  <% end %>
</ul>


