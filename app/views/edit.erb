<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="party">
                    <form method="post" action="/parties/<%= @party.id %>/update">
                        <h3>Edit Party</h3>
                        <div class="form-group">
                            <label class="control-label" for="name">Name</label>
                            <input type="text" class="form-control" value="<%= @party.name %>" id="name">
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" value="<%= @party.address %>" id="address">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="longitude">Longitude</label>
                                    <input type="text" class="form-control" value="<%= @party.longitude %>" id="longitude">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="latitude">Latitude</label>
                                    <input type="text" class="form-control" value="<%= @party.latitude %>" id="latitude">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="time">Time</label>
                            <input type="datime-local" class="form-control" value="<%= @party.time.strftime("%Y/%m/%d %H:%M:%S") %>" id="time">
                        </div>
                        <button type="submit" class="btn btn-primary" name="button">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
